<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.awi.floenavigation">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EntrySplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="@string/label_activity_main_activity"/>

        <activity android:name=".LoginPage"
            android:parentActivityName=".MainActivity"
            android:label="@string/label_activity_login_page">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <activity android:name=".AdminPageActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/label_activity_admin_page">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <activity android:name=".initialsetup.GridSetupActivity"
            android:parentActivityName=".AdminPageActivity"
            android:label="@string/label_activity_grid_setup">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdminPageActivity"/>
        </activity>

        <activity android:name=".deployment.DeploymentActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/label_activity_deployment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <activity android:name=".initialsetup.SetupActivity"
            android:label="@string/label_activity_setup"/>

        <service
            android:name=".initialsetup.SetupJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service
            android:name=".GPS_Service"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".aismessages.AISDecodingService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".network.NetworkService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".AngleCalculationService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".AlphaCalculationService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".ValidationService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".PredictionService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".sample_measurement.SampleMeasurementActivity"
            android:label="@string/label_activity_sample_measurement"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <activity android:name=".GridActivity" />

        <activity android:name=".ConfigurationActivity"
            android:parentActivityName=".AdminPageActivity"
            android:label="@string/label_activity_configuration">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdminPageActivity"/>
        </activity>

        <activity
            android:name=".AdminUserPwdActivity"
            android:label="@string/label_activity_admin_user_pwd"
            android:parentActivityName=".AdminPageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdminPageActivity"/>
        </activity>

        <activity android:name=".RecoveryActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/label_activity_recovery">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

        <activity android:name=".waypoint.WaypointActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/label_activity_waypoint">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>

    </application>

</manifest>